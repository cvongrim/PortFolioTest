<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="5dp"
              android:gravity="bottom">

    <ImageView
            android:id="@+id/grid_item_image"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_launcher"
            android:contentDescription="@string/portfolio_image_description"
             />


    <TextView
            android:id="@+id/grid_item_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@+id/label"
            android:textSize="12dp"
            android:layout_gravity="center_vertical"
            android:layout_alignLeft="@+id/grid_item_image"
            android:layout_below="@+id/grid_item_image"
            android:maxWidth="80dp"
            android:minHeight="40dp"
            android:maxHeight="40dp"
            android:minWidth="80dp"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/portfolio_id"
            android:id="@+id/portfolio_id_edit_text"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/grid_item_image"
            android:inputType="number"
            android:visibility="gone"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/portfolio_url"
            android:id="@+id/portfolio_url_edit_text"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/grid_item_image"
            android:inputType="textUri"
            android:visibility="gone"/>
</RelativeLayout>